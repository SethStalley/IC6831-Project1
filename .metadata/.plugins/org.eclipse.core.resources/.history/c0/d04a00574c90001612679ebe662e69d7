import java.util.ArrayList;

import org.opencv.core.Mat;

import team_identifier.ImShow;
import team_identifier.ImageProcessor;
import team_identifier.Video;

public class Main {
	
	public static void main(String[] args) throws Exception {
		ArrayList<Mat> frames = new ArrayList<Mat>();
		ArrayList<Mat> framesP = new ArrayList<Mat>();
		
		Video video = new Video("/Users/lucychaves/Desktop/cut1_360.mp4"); 
	    frames = video.readVideo();
	      
	    System.out.println("Frames: "+ frames.size());
	   
	    ImageProcessor processor = new ImageProcessor(frames);
	    framesP = processor.process();
	    
	        for(Mat frame: frames){
	        	ImShow im = new ImShow("Display");
	        	im.showImage(frame);
	        }
	}

}
